

<div class="media-object">
  <div class="media-object-section">
    <div class="thumbnail">
      <img src="https://source.unsplash.com/random/400x300">
    </div>
  </div>

  <div class="grid-y">
    <div class="media-object-section">
      <h3><%= @article.title %></h3>
      <%= link_to "Edit", edit_path %> | <%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this?" } %>
    </div>
    <div>
      <p><%= @article.content %></p>
      <%= link_to "Back to all articles", articles_path %>
    </div>
  </div>
</div>